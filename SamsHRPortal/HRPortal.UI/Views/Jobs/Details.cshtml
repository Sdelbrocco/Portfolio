@model HRPortal.Models.Job

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h1>@Model.Title</h1>
            </div>
            <div class="col-xs-12 col-md-3">
                <h3>
                    @Html.ActionLink("Apply", "Apply", "Jobs", new {jobId = Model.Id}, new {@class = "btn btn-primary"})
                </h3>
            </div>
            <div class="col-xs-12 col-md-3">
                <h3>@Model.Status</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h2>@Model.Company.Name</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <h4>@Model.Company.Description</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <h2> Job Description</h2>
                <h4>@Model.JobDescription</h4>
            </div>
        </div>
        </div>
    </div>
