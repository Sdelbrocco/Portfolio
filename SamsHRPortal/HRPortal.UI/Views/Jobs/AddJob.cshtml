@model HRPortal.UI.Models.ViewModels.JobVM

@{
    ViewBag.Title = "Add job";
}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Add job</h3>
                <div class="row">
                    @using (Html.BeginForm("AddJob", "Jobs", null, FormMethod.Post, new { id = "AddjobForm" }))
                    {

                        @Html.ValidationSummary(true)
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">job Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>Company Name: </label>
                                        @Html.DropDownListFor(j => j.Job.CompanyId, Model.CompanyList, "-Choose One-", new {@class = "form-control"})
                                        @Html.ValidationMessageFor(j=> j.Job.CompanyId)
                                    </div>
                                    <div class="form-group">
                                        <label>Job Title:</label>
                                        @Html.TextBoxFor(j => j.Job.Title, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(j => j.Job.Title)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(j=> j.Job.JobDescription)
                                        @Html.TextAreaFor(j => j.Job.JobDescription, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(j => j.Job.JobDescription)
                                    </div>
                                    <div class="form-group">
                                        <label>Job Status: </label>
                                        @Html.DropDownListFor(j => j.Job.Status, Model.Statuses, "-Choose One-", new {@class = "form-control"})
                                        @Html.ValidationMessageFor(j => j.Job.Status)
                                    </div>
                                    <button class="btn btn-primary">Save job</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
}

